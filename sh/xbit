alias xbitBuildPackage="storecmd 'cmd@bitbake -s | grep \$1' \
				  'cmd@bitbake \$1_Package' "

alias xbitBuildListTasks="storecmd 'cmd@bitbake -c listtasks \$1_recipeName'"
alias xbitBuildClean="storecmd 'cmd@bitbake \$1_recipeName -c clean'"
alias xbitBuild="storecmd 'cmd@bitbake \$1_recipeName' -c build"
alias xbitTask="storecmd 'cmd@bitbake \$1_recipeName'"

alias xbitSeachPack="storecmd 'cmd@bitbake -s | grep \$1'"

alias xbitBuildSDK="storecmd 'cmd@bitbak -s |grep image' \
			     'cmd@bitbake \$1_rpi-basic-image.bb -c populate_sdk'"
